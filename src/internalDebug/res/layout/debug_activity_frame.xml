<?xml version="1.0" encoding="utf-8"?>

<cash.andrew.mntrailconditions.ui.debug.DebugDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/debug_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
  <FrameLayout
      android:id="@+id/debug_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <cash.andrew.mntrailconditions.ui.debug.NonConsumingScrimInsetsFrameLayout
      android:layout_width="290dp"
      android:layout_height="match_parent"
      android:layout_gravity="end"
      android:background="#e222"
      android:fitsSystemWindows="true"
      app:insetForeground="#4000"
      >
    <ScrollView
        android:id="@+id/debug_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        />
  </cash.andrew.mntrailconditions.ui.debug.NonConsumingScrimInsetsFrameLayout>
</cash.andrew.mntrailconditions.ui.debug.DebugDrawerLayout>
