<?xml version="1.0" encoding="utf-8"?>
<cash.andrew.mntrailconditions.ui.trails.TrailListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/content_background"
    >
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@+id/trail_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Murphy Hanrehan"
        />
    <ImageView
        android:id="@+id/trail_list_item_conditions_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/accent"
        />
    <TextView
        android:id="@+id/trail_list_item_condition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/trail_list_item_conditions_image"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_item_conditions_image"
        tools:text="Wet Do Not Ride"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:id="@+id/trail_list_last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_item_title"
        tools:text="Last Updated:"
        />
    <TextView
        android:id="@+id/trail_list_item_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/trail_list_item_conditions_image"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_last_updated_text"
        tools:text="Tacky to Dry with a few wet spots in the normal places as of 5:30 p.m. Easter Sunday."
        />
    <TextView
        android:id="@+id/trail_list_last_updated_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/trail_list_last_updated_text"
        app:layout_constraintRight_toLeftOf="@+id/trail_list_item_conditions_image"
        tools:text="04-16-2017, 06:52 PM"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_item_title"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/trail_list_item_details"
        />
  </android.support.constraint.ConstraintLayout>
</cash.andrew.mntrailconditions.ui.trails.TrailListItemView>