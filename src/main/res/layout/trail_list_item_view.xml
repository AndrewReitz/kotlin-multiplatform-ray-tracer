<?xml version="1.0" encoding="utf-8"?>
<cash.andrew.mntrailconditions.ui.trails.TrailListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/content_background"
    app:cardElevation="4dp"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      >

    <TextView
        android:id="@+id/trail_list_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/trail_list_item_conditions_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Murphy Hanrehan"
        />
    <ImageView
        android:id="@+id/trail_list_item_conditions_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/closed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />

      <TextView
          android:id="@+id/trail_list_item_condition_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:gravity="center"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="@+id/trail_list_item_conditions_image"
          app:layout_constraintRight_toRightOf="@+id/trail_list_item_conditions_image"
          app:layout_constraintTop_toBottomOf="@+id/trail_list_item_conditions_image"
          tools:text="Wet Do Not Ride" />
    <TextView
        android:id="@+id/trail_list_last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/last_updated"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_item_title"
        />
    <TextView
        android:id="@+id/trail_list_item_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/trail_list_item_conditions_image"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_last_updated_text"
        tools:text="Tacky to Dry with a few wet spots in the normal places as of 5:30 p.m. Easter Sunday."
        />
    <TextView
        android:id="@+id/trail_list_last_updated_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/trail_list_last_updated_text"
        app:layout_constraintRight_toLeftOf="@+id/trail_list_item_conditions_image"
        tools:text="04-16-2017, 06:52 PM"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/trail_list_item_title"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/trail_list_item_details"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
</cash.andrew.mntrailconditions.ui.trails.TrailListItemView>
